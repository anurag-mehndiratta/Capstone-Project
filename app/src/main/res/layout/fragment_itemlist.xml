<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="50dp"
    android:orientation="horizontal"
    android:columnCount="3"
    android:rowCount="1">

    <LinearLayout
        android:layout_height="fill_parent"
        android:layout_width="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="15dp"
        android:paddingRight="15dp"
        android:layout_gravity="left|center_vertical|fill_vertical|start"
        android:layout_columnSpan="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:id="@+id/id"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:contextClickable="false"
            android:layout_gravity="center_vertical|fill_vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical|fill_vertical"
        android:layout_columnSpan="1"
        android:layout_columnWeight="1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:contextClickable="false"
            android:layout_gravity="center_vertical|fill_vertical"
            android:gravity="center_vertical|center_horizontal" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="right|center_vertical|fill_vertical|end"
        android:layout_columnSpan="1">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_edit_48"
            android:id="@+id/imageButton1"
            android:layout_weight="1"
            android:contentDescription="@string/edit_desc" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_del_48"
            android:id="@+id/imageButton2"
            android:layout_weight="1"
            android:contentDescription="@string/delete_desc" />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_right_48"
            android:id="@+id/imageButton3"
            android:layout_weight="1" />
    </LinearLayout>
</GridLayout>